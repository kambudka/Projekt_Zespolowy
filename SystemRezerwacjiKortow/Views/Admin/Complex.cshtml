@model IEnumerable<SystemRezerwacjiKortow.Models.OpeningHours>

@{
    ViewBag.Title = "Complex";
}

<h2>@SystemRezerwacjiKortow.Resources.Texts.Complex</h2>

@Html.Partial("_AdminPartial")

<div class="form-horizontal">
    <div>
        <h2>@SystemRezerwacjiKortow.Resources.Texts.OpeningHours</h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DayOfWeek)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TimeFrom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TimeTo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DayName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DayOfWeek)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeFrom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeTo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DayName)
                    </td>
                    <td>
                        @Html.ActionLink(SystemRezerwacjiKortow.Resources.Texts.Edit, "EditHours", new { dayOfWeek = item.DayOfWeek }) |
                        @Html.ActionLink(SystemRezerwacjiKortow.Resources.Texts.Delete, "DeleteHours",  item )
                    </td>
                </tr>
            }

        </table>
    </div>
    <div>
        <h2>@SystemRezerwacjiKortow.Resources.Texts.ComplexData</h2>

    </div>
</div>
