    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CourtNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SurfaceType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsForDoubles)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsCovered)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CourtID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CourtID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CourtID })
        </td>
    </tr>
