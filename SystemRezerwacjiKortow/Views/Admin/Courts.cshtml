@model IEnumerable<SystemRezerwacjiKortow.Models.Court>

@{
    ViewBag.Title = "Courts";
}

<h2>Courts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourtNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SurfaceType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsForDoubles)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCovered)
        </th>
