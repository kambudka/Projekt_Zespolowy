@model IEnumerable<SystemRezerwacjiKortow.Models.User>

@{
    ViewBag.Title = "Users";
}

<h2>@SystemRezerwacjiKortow.Resources.Texts.Users</h2>

@Html.Partial("_AdminPartial")
<p>
    @Html.ActionLink(SystemRezerwacjiKortow.Resources.Texts.CreateNew, "UserRegistration")
     
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsEmailVeryfied)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfBirth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsEmailVeryfied)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoleID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @if (item.RoleID != 1)
            {
                @Html.ActionLink(SystemRezerwacjiKortow.Resources.Texts.Delete, "DeleteUser", new { id = item.UserID }) 
            }
            | @Html.ActionLink(SystemRezerwacjiKortow.Resources.Texts.Edit, "EditUser", new { id = item.UserID })

        </td>
    </tr>
    }

</table>
<p style="color:red">@ViewBag.deleteMessage</p>
