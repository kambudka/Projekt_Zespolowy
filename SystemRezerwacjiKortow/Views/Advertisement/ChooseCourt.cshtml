@model SystemRezerwacjiKortow.Models.Advertisement

@{
    ViewBag.Title = "dsd";
}

<h2>Wybierz kort</h2>

@using (Html.BeginForm("ChooseCourt", "Advertisement", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" id="categoryAttribute">
            @Html.LabelFor(model => model.CourtID, "Kort", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" onchange="addAtributes()">
                @Html.DropDownList("CourtID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CourtID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="wybierz" class="btn btn-default" />
            </div>
        </div>

    </div>
}