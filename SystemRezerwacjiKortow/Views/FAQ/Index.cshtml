<html xmlns="http://www.w3.org/1999/xhtml">
<body>
    @{
        ViewBag.Title = SystemRezerwacjiKortow.Resources.Texts.FAQ;
    }

    <h2>FAQ</h2>

    <p>
        @Html.Raw(SystemRezerwacjiKortow.Resources.Texts.FAQIntro)
    </p>

    <hr/>

    <div>
        <h3>@SystemRezerwacjiKortow.Resources.Texts.CommonQuestions: </h3>
        <ol>
            <li><a href="#what-is-this">@SystemRezerwacjiKortow.Resources.Texts.WhatIsTennisCourtSystem</a></li>
            <li><a href="#language-change">@SystemRezerwacjiKortow.Resources.Texts.HowToChangeLanguage</a></li>
            <li><a href="#register">@SystemRezerwacjiKortow.Resources.Texts.HowToRegisterQuestion</a></li>
        </ol>
        <h3>@SystemRezerwacjiKortow.Resources.Texts.Reservations: </h3>
        <ol>
            <li><a href="#reserve">@SystemRezerwacjiKortow.Resources.Texts.HowToReserveQuestion</a></li>
            <li><a href="#cyclic-reserve">@SystemRezerwacjiKortow.Resources.Texts.WhatIsCyclicReservation</a></li>
        </ol>
    </div>
    <hr/>
    <div>
        <div>
            <h4 id="what-is-this"><strong>Q: </strong>@SystemRezerwacjiKortow.Resources.Texts.WhatIsTennisCourtSystem</h4>
            <strong>A: </strong>@SystemRezerwacjiKortow.Resources.Texts.TennisCourtSystemAnswer
        </div>
        <div>
            <h4 id="language-change"><strong>Q: </strong>@SystemRezerwacjiKortow.Resources.Texts.HowToChangeLanguage</h4>
            <strong>A: </strong>@SystemRezerwacjiKortow.Resources.Texts.ChangeLanguageAnswer
            <img src="~/Content/Image/FAQ/how_to_change_language.png" alt="@SystemRezerwacjiKortow.Resources.Texts.HowToChangeLanguage" title="@SystemRezerwacjiKortow.Resources.Texts.HowToChangeLanguage" /><br />
        </div>
        <div>
            <h4 id="register"><strong>Q: </strong>@SystemRezerwacjiKortow.Resources.Texts.HowToRegisterQuestion</h4>
            <strong>A: </strong>@SystemRezerwacjiKortow.Resources.Texts.HowToRegisterAnswer
            <img src="~/Content/Image/FAQ/how_to_register.png" alt="@SystemRezerwacjiKortow.Resources.Texts.HowToRegisterQuestion 1" title="@SystemRezerwacjiKortow.Resources.Texts.HowToRegisterQuestion 1" />
            <img src="~/Content/Image/FAQ/how_to_register_2.png" alt="@SystemRezerwacjiKortow.Resources.Texts.HowToRegisterQuestion 2" title="@SystemRezerwacjiKortow.Resources.Texts.HowToRegisterQuestion 2" />
        </div>
        <div>
            <h4 id="reserve"><strong>Q: </strong>@SystemRezerwacjiKortow.Resources.Texts.HowToReserveQuestion</h4>
            <strong>A: </strong>@SystemRezerwacjiKortow.Resources.Texts.HowToReserveAnswer
            <img src="~/Content/Image/FAQ/how_to_reserve.png" alt="@SystemRezerwacjiKortow.Resources.Texts.HowToReserveQuestion 1" title="@SystemRezerwacjiKortow.Resources.Texts.HowToReserveQuestion 1" />
            <img src="~/Content/Image/FAQ/how_to_reserve_2.png" alt="@SystemRezerwacjiKortow.Resources.Texts.HowToReserveQuestion 2" title="@SystemRezerwacjiKortow.Resources.Texts.HowToReserveQuestion 2" />
            <img src="~/Content/Image/FAQ/how_to_reserve_3.png" alt="@SystemRezerwacjiKortow.Resources.Texts.HowToReserveQuestion 3" title="@SystemRezerwacjiKortow.Resources.Texts.HowToReserveQuestion 3" />
        </div>
        <div>
            <h4 id="cyclic-reserve"><strong>Q: </strong>@SystemRezerwacjiKortow.Resources.Texts.WhatIsCyclicReservation</h4>
            <strong>A: </strong>@SystemRezerwacjiKortow.Resources.Texts.CyclicReservationAnswer
        </div>
    </div>

</body>
</html>