


@if (ViewBag.Message == null)
{
    <p></p>

    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <center>@SystemRezerwacjiKortow.Resources.Texts.EnterOldPassword    <input type="password" name="oldPassword" /> </center><br />
            <center>@SystemRezerwacjiKortow.Resources.Texts.EnterNewPassword  <input type="password" name="newPassword" /> </center><br />
            <center>@SystemRezerwacjiKortow.Resources.Texts.RepeatPassword        <input type="password" name="repeatPassword" /> </center><br />
            <center><input type="submit" value="Zmień" class="btn btn-default" /></center>
        </div>

    }
}
else
{
    @ViewBag.Message;
}

