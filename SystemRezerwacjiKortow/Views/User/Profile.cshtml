

@model SystemRezerwacjiKortow.Models.Customer

@{
    ViewBag.Title = "Konfiguracja profilu";
}

<center><h2><font color="green"> @SystemRezerwacjiKortow.Resources.Texts.ProfileConfigurationGeneral</font></h2></center>


@Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    <table>
        <tr>
            <td width="20%">
                <center>
                    <a href="#"><font color="black">@SystemRezerwacjiKortow.Resources.Texts.General</font></a><br /><br />
                    <a href="#"><font color="black"> @Html.ActionLink(@SystemRezerwacjiKortow.Resources.Texts.ChangePassword,"ChangePassword")</font></a><br /><br />
<a href="#"><font color="black">@SystemRezerwacjiKortow.Resources.Texts.SetUpPayments</font></a><br /><br />
<a href="#"><font color="black">@SystemRezerwacjiKortow.Resources.Texts.PaymentsHistory</font></a><br /><br />
<a href="#" onclick="javascript:return ShowMessage();">@SystemRezerwacjiKortow.Resources.Texts.DeleteAccount<font color="black"></font></a>
</center>
</td>
<td width="60%">
<center> @ViewBag.user.FirstName  @ViewBag.user.Surname</center><br />
<center> @SystemRezerwacjiKortow.Resources.Texts.Email: @ViewBag.user.Email</center>
</td>
<td width="20%"><input onclick="location.href = '@(Url.Action("EditProfile", "User"))'" value=@SystemRezerwacjiKortow.Resources.Texts.Edit class="btn btn-default" /></td>
</tr>


</table>
