
@{
    ViewBag.Title = "VerifyAccount";
}

<h2>@SystemRezerwacjiKortow.Resources.Texts.VerificationUser</h2>

@if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
{
    <div class="alert alert-success">
        <strong>@SystemRezerwacjiKortow.Resources.Texts.Success!</strong>@SystemRezerwacjiKortow.Resources.Texts.VerificationSuccessful @Html.ActionLink(SystemRezerwacjiKortow.Resources.Texts.Login, "Login", "User")
    </div>
}
else
{
    <div class="alert alert-danger">
        <strong>@SystemRezerwacjiKortow.Resources.Texts.Error!</strong> @ViewBag.Message
    </div>
}